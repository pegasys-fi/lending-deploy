{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "declaration": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"],
        "typechain/*": ["typechain/*"]
      }
    },
    "include": [
      "hardhat.config.ts",
      "helpers/**/*.ts",
      "tasks/**/*.ts",
      "test/**/*.ts",
      "deploy/**/*.ts",
      "typechain/**/*.ts",
      "typechain/**/*.d.ts"
    ]
  }